@{
  Layout = "_Layout";
}

@model Registrar.Models.Course
@using Registrar.Models
@using System.Collections.Generic;

<h2>Course Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.Number): @Html.DisplayFor(model => model.Number)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This course does not have any students</p>
}
else
{
  <h4>This course has the following students:</h4>
  <ul>
    @foreach(StudentCourse join in Model.JoinEntities)
    {
      <li>@join.Student.Name</li>
      @* @using (Html.BeginForm("DeleteJoin", "Items"))
      {
        @Html.Hidden("joinId", @join.ItemTagId)
        <input type="submit" value="Delete"/>
      } *@
    }
  </ul>
}
<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Add a student", "AddStudent", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Edit course", "Edit", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Delete course", "Delete", new { id = Model.CourseId })</p>