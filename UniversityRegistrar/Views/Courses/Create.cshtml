@{
  Layout = "_Layout";
}

@model Registrar.Models.Course

<h4>Add a new course</h4>
<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Number)
  @Html.TextBoxFor(model => model.Number)
  <br>
  <input type="submit" value="Add new course"/>
}
<p>@Html.ActionLink("Show all courses", "Index")</p>