@{
  Layout = "_Layout";
}

@using Registrar.Models
@model Registrar.Models.Student

<h2>Student Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>Enrollment Date: @Html.DisplayFor(model => model.EnrollmentDate)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This student does not have any courses yet!</p>
}
else
{
  <h4>This student has the following courses:</h4>
  <ul>
    @foreach(StudentCourse join in Model.JoinEntities)
    {
      <li>@join.Course.Name</li>
    }
  </ul>
}
<p>@Html.ActionLink("Back to list", "Index")</p>